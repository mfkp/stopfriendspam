<!DOCTYPE html>
<html>
<head>
  <title>Stop Friend Spam</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=1376025089309876";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<% if current_user %>
  <div class="user-creds">
    <%= current_user.name %> |
    <%= link_to "Sign out", signout_path, id: "sign_out", style: 'color: white;' %>
  </div>
<% end %>

<div class="outer-wrapper">
  <div class="wrapper">
    <%= yield %>
    <div class="description">
      <div class="fb-share-button" data-href="http://www.stopfriendspam.com/" data-type="button_count"></div>
    </div>
  </div>
</div>

</body>
</html>
